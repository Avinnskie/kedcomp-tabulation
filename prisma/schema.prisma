generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id               Int               @id @default(autoincrement())
  name             String
  participants     Participant[]
  scores           Score[]
  roundAssignments RoundAssignment[] @relation("AssignmentTeams")
  matchResults     MatchResult[]
}

model Participant {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  team   Team    @relation(fields: [teamId], references: [id])
  teamId Int
  scores Score[]
  participantAssignments ParticipantAssignment[]
}

model Judge {
  id          Int               @id @default(autoincrement())
  name        String
  email       String            @unique
  password    String // hashed
  assignments RoundAssignment[]
  scores      Score[]
}

model Room {
  id          Int               @id @default(autoincrement())
  name        String
  assignments RoundAssignment[]
}

model Round {
  id          Int               @id @default(autoincrement())
  name        String // e.g. "Preliminary 1", "Semifinal"
  number      Int // 1, 2, 3, 4 (semi), 5 (final)
  assignments RoundAssignment[]
  Score       Score[]
}

model RoundAssignment {
  id        String           @id @default(cuid())
  round     Round            @relation(fields: [roundId], references: [id])
  roundId   String
  room      Room             @relation(fields: [roomId], references: [id])
  roomId    String
  judge     Judge?           @relation(fields: [judgeId], references: [id])
  judgeId   String?
  matchResults MatchResult[] // hubungan baru
  teamAssignments TeamAssignment[] // NEW: relasi ke posisi tim
}

model Score {
  id            Int          @id @default(autoincrement())
  judge         Judge        @relation(fields: [judgeId], references: [id])
  judgeId       Int
  round         Round        @relation(fields: [roundId], references: [id])
  roundId       Int
  team          Team         @relation(fields: [teamId], references: [id])
  teamId        Int
  participant   Participant? @relation(fields: [participantId], references: [id])
  participantId Int?
  scoreType     ScoreType // TEAM or INDIVIDUAL
  value         Float
}

model MatchResult {
  id                Int             @id @default(autoincrement())
  roundAssignment   RoundAssignment @relation(fields: [roundAssignmentId], references: [id])
  roundAssignmentId Int
  team              Team            @relation(fields: [teamId], references: [id])
  teamId            Int
  rank              Int // 1 to 4
  points            Int // usually 3, 2, 1, 0
  participantAssignments ParticipantAssignment[]
}

model ParticipantAssignment {
  id             String       @id @default(cuid())
  participant    Participant  @relation(fields: [participantId], references: [id])
  participantId  Int
  matchResult    MatchResult  @relation(fields: [matchResultId], references: [id])
  matchResultId  Int
  role           DebateRole
}

enum DebateRole {
  PrimeMinister
  DeputyPrimeMinister
  LeaderOfOpposition
  DeputyLeaderOfOpposition
  MemberOfGovernment
  GovernmentWhip
  MemberOfOpposition
  OppositionWhip
}

enum ScoreType {
  TEAM
  INDIVIDUAL
}
